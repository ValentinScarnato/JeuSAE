<Window
    x:Class="JeuSAE.Parametres"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JeuSAE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Parametres"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Background="Black">
        <Label
            Width="145"
            Height="35"
            Margin="100,50,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Niveau Du Jeu : "
            FontSize="20"
            Foreground="White" />
        <Label
            Width="145"
            Height="35"
            Margin="100,100,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="DROITE : "
            FontSize="20"
            Foreground="White" />
        <Label
            Width="145"
            Height="35"
            Margin="100,150,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="HAUT : "
            FontSize="20"
            Foreground="White" />
        <Label
            Width="145"
            Height="35"
            Margin="100,200,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="BAS :"
            FontSize="20"
            Foreground="White" />
        <Label
            Width="145"
            Height="35"
            Margin="100,250,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="GAUCHE : "
            FontSize="20"
            Foreground="White" />
        <Label
            Width="145"
            Height="35"
            Margin="100,300,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="TIRER : "
            FontSize="20"
            Foreground="White" />
        <Button
            x:Name="Accepter"
            Width="115"
            Height="25"
            Margin="255,365,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF57A52D"
            Content="ACCEPTER" />
        <Button
            x:Name="Retour"
            Width="115"
            Height="25"
            Margin="0,365,255,0"
            HorizontalAlignment="right"
            VerticalAlignment="Top"
            Background="#FFBF1616"
            Click="click_Annuler"
            Content="RETOUR" />
        <ComboBox
            Width="136"
            Margin="260,61,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <ComboBoxItem IsSelected="True">Normal</ComboBoxItem>
            <ComboBoxItem>Difficile</ComboBoxItem>
        </ComboBox>

        <TextBox
            x:Name="bouton_reculer"
            Width="120"
            Margin="200,212,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            KeyDown="bouton_avancer_KeyDown"
            Text="S"
            TextWrapping="Wrap" />
        <Label
            x:Name="AFFICHAGE"
            Margin="365,99,232,217"
            Content=""
            FontSize="40"
            Foreground="White" />
        <TextBox
            x:Name="bouton_droite"
            Width="120"
            Margin="200,112,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="D"
            TextChanged="bouton_droite_TextChanged"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="bouton_avancer"
            Width="120"
            Margin="200,160,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Z"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="bouton_gauche"
            Width="120"
            Margin="200,260,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Q"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="bouton_tirer"
            Width="120"
            Margin="200,310,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Espace"
            TextWrapping="Wrap" />

    </Grid>
</Window>
