<Window
    x:Class="JeuSAE.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JeuSAE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FenetreJeu"
    Width="1000"
    Height="700"
    mc:Ignorable="d">
    <Grid>
        <Canvas
            x:Name="fond"
            Background="#FF717171"
            Focusable="True">
            <Rectangle
                x:Name="bandeau"
                Width="1000"
                Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Fill="Black"
                Stroke="Black" />
            <Rectangle
                x:Name="icone_vie"
                Canvas.Left="741"
                Canvas.Top="8"
                Width="45"
                Height="45"
                Fill="Red" />
            <ProgressBar
                Canvas.Left="802"
                Canvas.Top="14"
                Width="170"
                Height="31"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                BorderBrush="#FFF7F7F7"
                LargeChange="0"
                SmallChange="0"
                Value="50" />
            <Rectangle
                x:Name="icone_crane"
                Canvas.Left="456"
                Canvas.Top="8"
                Width="45"
                Height="45"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Fill="Red" />
            <Label
                x:Name="nombre_kill"
                Canvas.Left="520"
                Canvas.Top="8"
                Width="92"
                Height="45"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="4"
                FontFamily="Bodoni MT Black"
                FontSize="34"
                Foreground="Red" />


        </Canvas>
        <Rectangle
            x:Name="joueur"
            Margin="414,285,414,285"
            Fill="Red" />

    </Grid>
</Window>
