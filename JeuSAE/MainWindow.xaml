<Window
    x:Class="JeuSAE.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JeuSAE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FenetreJeu"
    Width="1000"
    Height="700"
    mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas
            x:Name="fond"
            Background="#FF717171"
            Focusable="True" Grid.ColumnSpan="3">
            <Rectangle
                x:Name="bandeau"
                Width="1000"
                Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Fill="Black"
                Stroke="Black" />
            <Rectangle
                x:Name="icone_vie"
                Canvas.Left="741"
                Canvas.Top="8"
                Width="45"
                Height="45"
                Fill="Red" />
            <ProgressBar
                Canvas.Left="802"
                Canvas.Top="14"
                Width="170"
                Height="31"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                LargeChange="0"
                SmallChange="0"
                Value="50" BorderBrush="White" Background="White" />
            <Rectangle
                x:Name="icone_crane"
                Canvas.Left="456"
                Canvas.Top="8"
                Width="45"
                Height="45"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Fill="Red" />
            <Label
                x:Name="nombre_kill"
                Canvas.Left="514"
                Width="84"
                Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="4"
                FontSize="38"
                Foreground="Red" />
            <Label
                x:Name="nombre_balles"
                Canvas.Left="110"
                Width="118"
                Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="8 | 10"
                FontSize="38"
                Foreground="White" />
            <Rectangle
                x:Name="icone_munition"
                Canvas.Left="30"
                Canvas.Top="8"
                Width="45"
                Height="45"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Fill="Red" />
            <Rectangle x:Name="ZombieCanvas" Height="89" Canvas.Left="169" Canvas.Top="312" Width="89" Fill="Black" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Rectangle
                x:Name="joueur"
                Margin="427,294,427,294"
                Fill="Red" KeyUp="joueur_KeyUp" KeyDown="joueur_KeyDown" Width="146" Height="96" />


        </Canvas>
        

    </Grid>
</Window>
