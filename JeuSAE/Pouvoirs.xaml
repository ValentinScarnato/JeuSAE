<Window x:Class="JeuSAE.Pouvoirs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JeuSAE"
        mc:Ignorable="d"
        Title="Pouvoirs" Height="450" Width="800">
    <Grid>
        <Button x:Name="boutonVitesse" Content="Vitesse +5%" HorizontalAlignment="Left" Margin="100,125,0,0" VerticalAlignment="Top" BorderBrush="Black" Background="#FFFDFF00" Width="100" Height="200" Click="boutonVitesse_Click"/>
        <Button x:Name="boutonVie" Content="Vie +10" HorizontalAlignment="Left" Margin="350,125,0,0" VerticalAlignment="Top" Width="100" Height="200" Background="#FFFDFF00" BorderBrush="Black" Click="boutonVie_Click"/>
        <Button x:Name="boutonBalles" Content="Balles +5" HorizontalAlignment="Left" Margin="600,125,0,0" VerticalAlignment="Top" Background="#FFFDFF00" Height="200" Width="100" BorderBrush="Black" Click="boutonBalles_Click"/>

    </Grid>
</Window>
